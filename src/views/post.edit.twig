{% extends 'layout.twig' %}

{% set subtitle = 'Edit - ' ~ post.title ~ ' - ' %}
{% block sub_title subtitle %}

    {% block content %}
        {% if message %}
            {% include 'sections/error.twig' with message %}
        {% endif %}

        {% if post %}
            {% include 'sections/form.update.post.twig' with post %}
        {% endif %}
    {% endblock content %}