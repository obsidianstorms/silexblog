{% extends 'layout.twig' %}

{% block sub_title 'Login - ' %}
{% block body %}
{% block formlogincommentator %}
    <h2>Login to Comment</h2>
    <form enctype="multipart/form-data" action="/login/commentator" method="POST">
        <div>
            <label for="username">Username: </label>
            <input type="text" name="username" />
        </div>
        <div>
            <label for="password">Password: </label>
            <input type="password" name="password" />
        </div>
        <div>
            <input type="submit" name="submit" value="Login" />
        </div>
    </form>
{% endblock formlogincommentator %}

{% endblock body %}
